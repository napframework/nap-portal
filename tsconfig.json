{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "watchOptions": {
    "watchFile": "usefsevents",
    "watchDirectory": "usefsevents",
    "fallbackPolling": "dynamicpriority",
    "synchronousWatchDirectory": true
  }
}
